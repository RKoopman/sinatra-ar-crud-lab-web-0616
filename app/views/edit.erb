
<p><%= @post.name %></p>

<p><%= @post.content %></p>

<form method="post" action="/posts/<%=@post.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h2>Name: <input type="text" value="<%=@post.name %>" name="name"></h2>
  <p>Content: <input type="text" value="<%=@post.content%>" name="content"></p>
  <input type="submit" value="submit">
</form>

